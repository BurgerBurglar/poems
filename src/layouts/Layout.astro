---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="max-w-2xl px-4 mx-auto">
      <slot />
    </div>
  </body>
  <style is:global>
    html {
      @apply scroll-smooth;
    }
    body {
      @apply min-h-screen bg-earth-50 selection:text-earth-200 selection:bg-earth-500;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      @apply font-bold text-earth-500;
    }

    h1 {
      @apply text-3xl;
    }

    p {
      @apply leading-loose;
    }

    /* this doesn't work in Article.astro for some reason */
    blockquote {
      @apply my-2 py-1 pl-6 pr-2 border-l-4 border-earth-400 text-left;
    }
    blockquote p {
      @apply leading-normal my-3 first-of-type:mt-0 last-of-type:mb-0;
    }
  </style>
</html>
